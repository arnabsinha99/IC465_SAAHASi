<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:textSize="24dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Scan your crop!"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

    <Button
        android:id="@+id/button_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:text="Take a photo"
        android:textSize="20dp"
        android:onClick="onClick"
        android:backgroundTint="@color/colorPrimary"
        ></Button>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cherry_id"
            android:layout_marginTop="350dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cherry_title_image_card"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="18dp"
                >

                <ImageView
                    android:id="@+id/cherry_title_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cherry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:textSize="16dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_toEndOf="@id/cherry_title_image_card"
                android:text="Cherry"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cherry_title"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/cherry_title_image_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cherry_examine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="See details!"
                    />

            </LinearLayout>

        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:textSize="20dp"
            android:textColor="@color/cardview_dark_background"
            android:text="Explore these common crops!"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apple_id"
        android:layout_marginTop="132dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/apple_title_image_card"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:elevation="10dp"
            app:cardCornerRadius="18dp"
            >

            <ImageView
                android:id="@+id/apple_title_image"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:scaleType="centerCrop"
                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/apple_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:textSize="16dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toEndOf="@id/apple_title_image_card"
            android:text="Apple"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apple_title"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/apple_title_image_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apple_examine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="12dp"
                android:textColor="@color/cardview_dark_background"
                android:text="See details!"
                />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/potato_id"
        android:layout_marginTop="240dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/potato_title_image_card"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:elevation="10dp"
            app:cardCornerRadius="18dp"
            >

            <ImageView
                android:id="@+id/potato_title_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/potato_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:textSize="16dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toEndOf="@id/potato_title_image_card"
            android:text="Potato"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/potato_title"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/potato_title_image_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/potato_examine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="12dp"
                android:textColor="@color/cardview_dark_background"
                android:text="See details!"
                />

        </LinearLayout>

        </RelativeLayout>
</androidx.cardview.widget.CardView>